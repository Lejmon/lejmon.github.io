/* Logo (skryté na začiatku) */
.logo-container {
    transform: translateX(200px); /* Presuneme logo mimo obrazovku */
    opacity: 0; /* Skryjeme logo */
    transition: transform 1s ease, opacity 1s ease;
}

/* About Me */
.about-me {
    transform: translateY(50px); /* Presuneme About Me časť nad obrazovku */
    opacity: 0; /* Skryjeme About Me časť */
    transition: transform 1s ease, opacity 1s ease;
}

/* Po schrollnutí */
body.scrolled .logo-container {
    transform: translateX(0);
    opacity: 1;
}

body.scrolled .about-me {
    transform: translateY(0);
    opacity: 1;
}
